    "configurations": [
        {
            "name": "Launch",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}",
            "env": {},
            "args": [
                "-visit", "https://www.google.com/",
                "-allow", "www.google.com,google.com"
            ]
        }
    ]
}